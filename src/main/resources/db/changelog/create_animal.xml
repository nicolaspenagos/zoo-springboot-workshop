<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <!-- Refer to https://docs.liquibase.com/change-types/community/create-table.html -->

    <changeSet id="33d4e9bc-7210-47c3-9617-c56ab7c0750p" author="nicolas.penagos" failOnError="true">
        <createTable tableName="animal">
            <column name="animal_id" type="UUID">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="name" type="varchar(255)" />
            <column name="sex" type="char" />
            <column name="weight" type="double" />
            <column name="height" type="double" />
            <column name="age" type="int" />
            <column name="arrival_date" type="date" />
            <column name="mother_id" type="UUID" />
            <column name="father_id" type="UUID" />
        </createTable>
    </changeSet>
</databaseChangeLog>

